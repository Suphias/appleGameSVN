@using WxPayAPI
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}<h2>微信小游戏</h2>
<div style="margin-top:40%;margin: 0px auto;text-align:center;">
    <form action="/Game/loginGame" method="post">
        <img  src="~/images/weixinlog.png"/><br />
        <a style="color:blue;text-decoration: none;" href="https://open.weixin.qq.com/connect/oauth2/authorize?appid=wx8329a1e7e3cff76d&redirect_uri=@(Html.Raw(WxPayConfig.SiteName))/Game/LoginByWeixin_&response_type=code&scope=snsapi_base&state=@(Html.Raw(ViewBag.shareId))#wechat_redirect">点击登陆</a>
    </form>
    <form action="/Game/loginGame" method="post">
        <input type="text" name="weixinName" />
            <button type="submit">登陆</button>
    </form>
</div>
   


@model IEnumerable<Message>
@{
    Layout = "~/Views/Shared/_LayoutHaveManue.cshtml";
}
<h2>消息列表</h2>
@{
    if (Model != null)
    {
        foreach (var message in Model)
        {

            int n = message.sender.weixinName.Length;
            @:发送者：@message.sender.weixinName.Substring(n - 5)
            @*<a href="/Message/Index_replayMessage/?messageId=@message.id">回复</a>*@
            @:发送日期：@message.createTime<br />
            @:消息内容：@message.content<br />
            @*@:回复内容：@message.replyContent<br />*@
            <hr />


        }
    }
    else
    {
       @: 没有消息

    }
}

using System;

namespace AntDesigner.NetCore.GameCity
{
    public class Seat : ISeat
    {
        public bool IsEmpty { get;private  set; }
        public int PlayerId { get; private set; }
        public Seat()
        {
            IsEmpty = true;
        }
        public void PlayerSetDown(IPlayerSeat player_)
        {
            if (IsEmpty==true)
            {
                PlayerId = player_.id;
                IsEmpty = false;
                return;
            }
            throw new Exception("座位上已经有人,不能坐下");
        }
        public void PlayLeave()
        {
            PlayerId = 0;
            IsEmpty = true;
        }
    }
}